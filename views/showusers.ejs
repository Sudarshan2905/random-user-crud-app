<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <title>Show All Users</title>
  <style>
    body {
      font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
    }

    table, th, td {
      border: 1px solid black;
      border-collapse: collapse;
      padding: 1rem;
      margin: 10px auto;
      text-align: center;
    }

    th {
      background-color: lightgray;
      padding: 1.5rem;
    }

    .edit {
      background-color: #da9c37;
      border: 2px solid lightblue;
      border-radius: 5px;
      padding: 0.4rem 1rem;
      color: white;
      cursor: pointer;
    }

    .add {
      background-color: #3498db;
      border: 2px solid lightblue;
      border-radius: 5px;
      padding: 0.4rem 1rem;
      color: white;
      margin-bottom: 20px;
      cursor: pointer;
    }

    .del {
      background-color: #da5837;
      border: 2px solid lightblue;
      border-radius: 5px;
      padding: 0.4rem 1rem;
      color: white;
      cursor: pointer;
    }

    .actions {
      display: flex;
      gap: 10px;
      justify-content: center;
    }

    h2 {
      margin-top: 20px;
    }
  </style>
</head>
<body>
  <center>
    <h2>All Users</h2>

    <form method="get" action="/users/new">
      <button class="add">‚ûï Add New User</button>
    </form>

    <table>
      <tr>
        <th>ID</th>
        <th>Email</th>
        <th>Username</th>
        <th>Actions</th>
      </tr>

      <% for(let user of users) { %>
        <tr>
          <td><%= user.id %></td>
          <td><%= user.email %></td>
          <td><%= user.username %></td>
          <td class="actions">
            <!-- Edit Button Form -->
            <form method="get" action="/users/<%= user.id %>/edit">
              <button class="edit">‚úèÔ∏è Edit</button>
            </form>

            <!-- Delete Button Form -->
            <form method="POST" action="/user/<%= user.id %>?_method=DELETE" onsubmit="return confirm('Are you sure you want to delete this user?');">
              <button class="del">üóëÔ∏è Delete</button>
              <input type="password" name="password" placeholder="Enter password" required>
            </form>
          </td>
        </tr>
      <% } %>
    </table>
  </center>
</body>
</html>
